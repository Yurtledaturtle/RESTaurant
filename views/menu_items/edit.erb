<h3 class="item-menu"> Make a Menu Edit </h3>


<div class ="row">

  <% @menu_items.each_with_index do |menu_item, index| %>
  <div class = "item-show six columns">
      <h3>  <%= menu_item.name %> </h3>
        <h5> <%= menu_item.sub_category%>   $<%=('%.2f' % (menu_item.price))%> </h5>
        <p><%=menu_item.description%>
        <form action="/menu_items/<%= menu_item.id %>" method="post">
          <input type="hidden" name="_method" value="delete">
          <button class = "remove-menu-item" type="submit"> X </button>
        </form>
        <p>
    </div>
  <% if (index+1)%2 == 0%>
 </div>
 <div class ="row">
  <%end%>
<%end%>
</div>

<form class = "link" action="/menu_items/new">
     <input type="submit" value="Add New Item">
 </form>

